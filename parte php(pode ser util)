    function apostar()
    {
        while ($idade != 1 || $idade != 2)
        {
            print("Você tem mais de 18 anos?\n");
            $idade = readline("[1] Sim\n [2] Não\n");

            if ($idade == 2) 
            {
                print("Apostas são apenas para maiores de 18 anos.");
                exit();
            }

            else 
            {
                switch ($sorteio)
                {
                    case 'mega':
                        sorteio_mega();
                        break;
                }
            }
        }
    }

